    <style name="Theme.MyApplication" parent="Base.Theme.MyApplication" />
    <style name="CircularImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item> <!-- 50% of the width/height makes it a circle -->
    </style>

    <style name="cornerRounder">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item> <!-- 50% of the width/height makes it a circle -->
